<turbo-frame id="task_<%= task.id %>">
  <%= form_with model: task, url: toggle_task_path(task), method: :patch, data: { turbo_frame: "task_#{task.id}" } do |form| %>
    <%= form.check_box :completed, checked: task.completed, class: "mr-2", onchange: "this.form.submit();" %>
    <%= task.description %>
  <% end %>
</turbo-frame>
