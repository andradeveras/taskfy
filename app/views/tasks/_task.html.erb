<div class="block">
  <turbo-frame id="task_<%= task.id %>">
    <%= form_with model: task, url: toggle_task_path(task), method: :patch, data: { turbo_frame: "task_#{task.id}" }, class:"text-lg inline-block my-3 w-72" do |form| %>
      <%= form.check_box :completed, 
                         checked: task.completed, 
                         class: "mr-2 align-middle bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500", 
                         onchange: "this.form.submit();" %>
      <%= task.description %>
    <% end %>
    <%= link_to "Edit", edit_task_path(task),
              class: "btn bg-gray-100"
    %>
  </turbo-frame>
</div>
